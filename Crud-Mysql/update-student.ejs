<h1>Update Student</h1>
<form action="" method="POST">
    <input type="hidden" name="id" value="<%= students[0].id %>">
    <input type="text" name="name" value = "<%= students[0].name %>" placeholder="Enter Name" required><br><br>
    <input type="email" name="email" value = "<%= students[0].email %>" placeholder="Enter Email" required><br><br>
    <input type="number" name="mno"  value = "<%= students[0].mno %>" placeholder="Enter Mobile Number" required><br><br>
    <input type="submit" value="Submit">
</form>